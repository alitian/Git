    function check_data(){
        var pro_ids = $(".del_item").map(function(){
            return $(this).data("id");
        }).get().join(",");
        $("#pro_ids").val(pro_ids);
        if( ! $.trim($('#pro_title').val())){
            alert('推荐标题不能为空！');
            return false;
        }
        var guide = $.trim($('#guide').val());
        if(!guide){
            alert('导语不能为空！');
            return false;
        }
        if(guide.length>500){
            alert('导语不能超过五百字！');
            $("#guide").focus();
            return false;
        }
        if($("input[name='isupload']").val()==1){
            if($('#check_upload').val()!=1){
                alert('图片正在上传中！');
                return false;
            }
        }
        if( ! $.trim($('#cover').val())){
