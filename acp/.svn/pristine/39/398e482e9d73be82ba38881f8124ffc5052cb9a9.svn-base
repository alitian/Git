                if (in_array($item['order_no'], $tt2) || in_array($item['order_no'], $tt1)) {
                    $item['operation'] = '已修复';
                } else {
                    if (empty($item['ali_trade_no']) || ($parms['offset'] == null && $parms['per_page'] == null)) {
                        $item['operation'] = '修复';
