        $result_1 = $this->db->query(str_replace('#WHERE#', $where, $sql))->result_array();
        $where = "AND '{$last_month_end}'>=ctime {$if_pay}";
        $result_2 = $this->db->query(str_replace('#WHERE#', $where, $sql))->result_array();
        $data['last_month'] = count($result_2) - count($result_1);
        //本月
        $the_month_start = date("Y-m-d H:i:s", mktime(0, 0, 0, date("m"), 1, date("Y")));
        $the_month_end = date("Y-m-d H:i:s", mktime(23, 59, 59, date("m"), date("t"), date("Y")));
        $where = "AND '{$the_month_start}'>ctime {$if_pay}";
