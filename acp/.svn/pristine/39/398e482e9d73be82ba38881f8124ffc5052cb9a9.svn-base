                $this->Order_biz->set_oid($item['id'])->update_status('400');
            }
            $sql = "UPDATE md_product_back as bak,md_pay_record_alipay ali,md_pay pay SET bak.if_pay=3 WHERE ali.merchant_out_order_no=pay.out_trade_no AND pay.back_id=bak.id AND ali.sub_trans_code_msg='交易退款' AND bak.if_pay=1";

            //$sql = "UPDATE md_product_back as bak,md_pay_record_alipay ali,md_pay pay SET bak.if_pay=3 WHERE ali.merchant_out_order_no=pay.out_trade_no AND pay.back_id=bak.id AND ali.sub_trans_code_msg='交易退款'";
            $this->db->query($sql);
        }
        $data['type'] = $type;
        $data['startTime'] = $this->input->get_post('start_time');
        $data['endTime'] = $this->input->get_post('end_time');
        $data['proId'] = $this->input->get_post('pro_id');
        $data['level'] = $this->input->get_post('level');
        $data['orderNo'] = $this->input->get_post('order_no');
        $data['transNo'] = $this->input->get_post('trans_no');
        if ($type == 'refund') {
            $data['res'] = $this->_get_refund($data);
        } else {
            $data['res'] = $this->_get_refunded($data);
        }
        $this->_title = array_merge(array('warning' => '支付宝已退款'), $this->_title);
        $data['title'] = $this->_title;
        $this->load->view('pay_ad/refund', $data);
