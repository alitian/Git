            $sql = "SELECT bak.* FROM md_product_back AS bak,md_pay_record_alipay ali,md_pay pay WHERE ali.merchant_out_order_no = pay.out_trade_no AND pay.back_id = bak.id AND ali.sub_trans_code_msg = '交易退款' AND bak.if_pay=1";
            $list = $this->db->query($sql)->result_array();
