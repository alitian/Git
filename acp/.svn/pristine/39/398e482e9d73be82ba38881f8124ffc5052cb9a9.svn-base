            case 1:
                $item['if_pay'] = "已支付";
                if (in_array($item['back_status'], array(402,302,204)))
                    $item['if_pay'] = "退款中";
                elseif (in_array($item['back_status'], array(400,300,205)))
                    $item['if_pay'] = "已退款";
                else
                    ;
                break;
            case 35:
            case 36:
                $item['if_pay'] = "退款中";
                break;
            case 31:
            case 39:
                $item['if_pay'] = "已退款";
                break;
            default:
