    function pay_editor_data(data){
        $('#pay-editor input[name="receiver"]').val(data.receiver);
        $('#pay-editor input[name="serial"]').val(data.id);
        $('#pay-editor input[name="subbank_name"]').val(data.subbank_name);
        $('#pay-editor select[name="bank_type"]').val(data.bank_type);
        $('#pay-editor select[name="area"]').val(data.bank_province);

        $('#pay-editor select[name="city"]').val(data.bank_city);
        $('#pay-editor input[name="account_no"]').val(data.account_no);
        $('#pay-editor input[name="recv_mobile"]').val(data.recv_mobile);
        if(data.acc_type==1){
            $("#acc_type1").attr("checked","checked");
        }else if(data.acc_type==2){
            $("#acc_type2").attr("checked","checked");
        }
        $('#pay-editor input[name="pay_amt"]').val(data.total);
        $('#pay-editor input[name="ali_userid"]').val(data.ali_userid);
        $('#pay-editor input[name="ali_username"]').val(data.ali_username);
        $('#pay-editor input[name="remit_way"]').val(data.remit_way);
        if(data.remit_way==1){
            $('#show_remit_way option:selected').text('财付通');
            $('#show_remit_way option:selected').val('1');
            $('#show_caifutong_remit').css('display','block');
            $('#show_alipay_remit').css('display','none');
        }else{
            $('#show_remit_way option:selected').text('支付宝');
            $('#show_remit_way option:selected').val('2');
            $('#show_caifutong_remit').css('display','none');
            $('#show_alipay_remit').css('display','block');
        }
    }
    function select_remit(){
        var new_remit_type = $('#show_remit_way option:selected').val();//选中的值
        $('#pay-editor input[name="remit_way"]').val(new_remit_type);
        if(new_remit_type==1){
            $('#show_caifutong_remit').css('display','block');
            $('#show_alipay_remit').css('display','none');
        }else{
            $('#show_caifutong_remit').css('display','none');
            $('#show_alipay_remit').css('display','block');
        }
    }
