            }
        }
        //根据链接属性 组合 查询语句
        $all_select = $select[0];
        for ($j = 0; $j < count($select)-1; $j++) {
            if ($meth[$j] == 1) {
                $all_select = $all_select . ' AND ' . $select[$j + 1];
            } elseif ($meth[$j] == 2) {
