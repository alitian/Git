    /**
     * 取[project | comment | update | video]已在推荐列表情况
     * @param string $condition
     * @return array array('id'=>$flag) ex:$flag = $post_id-$reply_id or $pro_id or $update_id or $video_id
     */
    public function get_app_rcmd_ids_by_condition($condition='project'){
        $cate_id = $this->cate_ids[$condition];
        $recm_ids = array();
        if(!$cate_id) return $recm_ids;

        $item_list = $this->db->select("id,pic")->where("cate_id",$cate_id)->get(self::MD_APP_RCMD_PRO)->result_array();
        foreach($item_list as $item_info){
            $detail = unserialize($item_info['pic']);
            if(isset($detail['post_id']) && $detail['post_id'] != ''){  //评论
                $recm_ids[$item_info['id']] = $detail['post_id'].'-'.$detail['origin_id'];
            }else{
                $recm_ids[$item_info['id']] = $detail['origin_id'];
            }
        }
        return $recm_ids;
    }

