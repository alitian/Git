    function make_map(map_id, title, map_name, map_data){
        var myChart = echarts.init(document.getElementById(map_id));
        var option = {
            title: {
                show: true,
                text: title,
                x: 'center',
                y: 'top'
            },
            tooltip : {
                trigger: 'item',
                formatter: "{a} <br/>{b} : {c} ({d}%)"
            },
            series : [
                {
                    name: map_name,
                    type: 'pie',
                    radius : '65%',
                    center: ['50%', '50%'],
                    data: map_data,
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                        }
                    }
                }
            ]
        };
        myChart.setOption(option);
    }
</script>

